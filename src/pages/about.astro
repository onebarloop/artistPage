---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
import Form from '../components/Form';
import { Icon } from 'astro-icon';
---

<Layout title='about'>
  <Header path='/about' />
  <div class='h-0.5 md:mt-12 mb-6 bg-myYellow w-2/3'></div>
  <main>
    <section
      class='flex items-start flex-wrap md:flex-nowrap md:mt-8 xl:w-4/5 gap-8'
    >
      <About />
      <img alt='felix' src='/pics/felix.JPEG' class='md:w-60 w-full' />
    </section>
  </main>
  <section class='flex flex-col-reverse md:flex-row md:gap-16'>
    <Form client:load />
    <article
      class='flex flex-col items-center md:justify-center mt-8 md:mt-0 gap-4'
    >
      <p class='md:self-start text-2xl md:text-1xl'>Like my art?</p>
      <p class='md:self-start'>Get in contact!</p>
      <p class='text-2xl md:text-4xl'>
        Leave me a message
        <span class='md:text-8xl'>ðŸ“®</span>
      </p>
    </article>
  </section>
</Layout>

<Footer />
